<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SizeTitle">24sp</style>

    <style name="TransparentTextToolbar" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Tải lên ...</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">8</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
</resources>
