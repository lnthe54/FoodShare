<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_area"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/tv_name_area"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/iv_area"
        android:layout_alignRight="@id/iv_area"
        android:layout_alignBottom="@+id/iv_area"
        android:background="@color/colorBlackOpacity"
        android:gravity="center"
        android:lines="1"
        android:text="Cau Giay"
        android:textColor="@color/colorWhite" />

</RelativeLayout>