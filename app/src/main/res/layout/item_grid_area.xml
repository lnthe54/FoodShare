<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:anxmlns="http://schemas.android.com/apk/res-auto"
    anxmlns:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_area"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_name_area"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/iv_area"
            android:layout_alignRight="@id/iv_area"
            android:layout_alignBottom="@+id/iv_area"
            android:background="@color/colorBlackOpacity"
            android:gravity="center"
            android:lines="1"
            android:text="Cau Giay"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>


</android.support.v7.widget.CardView>